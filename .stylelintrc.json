{
  "extends": ["stylelint-config-standard", "stylelint-config-css-modules"],
  "overrides": [
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss",
      "rules": {
        "selector-class-pattern": [
          "^[a-z][a-zA-Z0-9]*$",
          {
            "message": "Expected the class name to be in camelCase"
          }
        ]
      }
    }
  ]
}
